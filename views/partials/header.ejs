<html>
	<head>
		<title>Blog App</title>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
	</head>
	<body>
		<div class="ui inverted menu">
			  <a class="active  item" href="/blogs">
				<i class = "code icon"></i>BlogSite
			  </a>
			
			
				<a class=" blue item"  href="/blogs/new">
				   Add a new Blog
				  </a>
			
			  
			
			  <div class="right menu">
               <% if(!currentUser){ %>
				  
				  <div class="item">
					<div class="ui inverted blue button"><a href="/login">Login</a></div>
				  </div>
				  <div class="item">
					<button class="ui inverted teal button"><a href="/register">Sign Up</a></button>
				  </div>
                    <% } else { %>
					  <div class="item">
						<div class="ui inverted blue button">Signed In As <%= currentUser.username %></div>
					  </div>
                    <div class="item">
					  <div class="ui inverted teal button"><a href="/logout">Logout</a></div>
				     </div>
                        
                    <% } %>
				
			  </div>
		</div>
		
    <div>
        
        <% if(error && error.length > 0){ %>
            <div class="ui negative message" >
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="ui positive message" >
                <%= success %>
            </div>
        <% } %>
    </div>		
		
		
		
		
		
		
		
		
		
		
		
		
		
	